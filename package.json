{
  "name": "organizador-de-archivos",
  "version": "1.2.0",
  "description": "App que Organiza tus archivos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-rebuild && electron-builder"
  },
  "build": {
    "appId": "com.mycompany.myapp",
    "productName": "Organizador de Archivos",
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "python/",
      "node_modules/"
    ],
    "win": {
      "icon": "icon/Icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^25.3.0",
    "electron-builder": "^24.3.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  },
  "dependencies": {
    "python-shell": "^5.0.0"
  }
}
